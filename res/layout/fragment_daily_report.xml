<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="gatech.cs6300.project2.DailyReportActivity$PlaceholderFragment" >
    
    <RelativeLayout 
        android:id="@+id/purchase_layout"
	    android:layout_width="match_parent" 
	    android:layout_height="match_parent" 
	    android:paddingLeft="@dimen/activity_horizontal_margin"
	    android:paddingRight="@dimen/activity_horizontal_margin"
	    android:paddingTop="@dimen/activity_vertical_margin" 
	    android:layout_marginBottom="5dp"
	    android:layout_weight="0.5" >
    
	    <TextView
	        android:id="@+id/purchase_report_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textAppearance="?android:attr/textAppearanceLarge" 
	        android:text="Purchase Report" />
	
	    <ListView
	        android:id="@+id/purchase_report"
	        android:layout_width="wrap_content"
	        android:layout_height="170dp"
	        android:layout_alignLeft="@+id/purchase_report_title"
	        android:layout_alignParentRight="true"
	        android:background="@drawable/rounded_corner"
	        android:layout_below="@+id/purchase_report_title" >
	    </ListView>
	    
	    <TextView
	        android:id="@+id/purchase_total_label"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/purchase_report"
	        android:text="Purchase Total:" />
	
	    <TextView
	        android:id="@+id/purchase_total"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/purchase_report"
	        android:layout_toRightOf="@+id/purchase_total_label"
	        android:text="$0.00" />
	    
	    <TextView
	        android:id="@+id/purchase_report_empty"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/purchase_report_title"
	        android:layout_alignParentRight="true"
	        android:layout_below="@+id/purchase_report_title"
	        android:text="No purchases found" />
	    
    </RelativeLayout>

    <RelativeLayout 
        android:id="@+id/preorder_layout"
        android:layout_width="match_parent" 
        android:layout_height="match_parent" 
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="5dp"
        android:layout_weight="0.5" >
	    
	    <ListView
	        android:id="@+id/preorder_report"
	        android:layout_width="wrap_content"
	        android:layout_height="170dp"
	        android:layout_alignLeft="@+id/preorder_report_title"
	        android:layout_alignParentRight="true"
	        android:background="@drawable/rounded_corner"
	        android:layout_below="@+id/preorder_report_title" >
	
	    </ListView>
	
	    <TextView
	        android:id="@+id/preorder_report_title"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignParentTop="true"
	        android:text="Preorder Report"
	        android:textAppearance="?android:attr/textAppearanceLarge" />
	
	    <TextView
	        android:id="@+id/preorder_total_label"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/preorder_report"
	        android:text="Preorder Total:" />
	
	    <TextView
	        android:id="@+id/preorder_total"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/preorder_report"
	        android:layout_toRightOf="@+id/preorder_total_label"
	        android:text="$0.00" />
	    
	    <TextView
	        android:id="@+id/preorder_report_empty"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_alignLeft="@+id/preorder_report_title"
	        android:layout_alignParentRight="true"
	        android:layout_below="@+id/preorder_report_title"
	        android:text="No preorders found" />
	    
    </RelativeLayout>
    
</LinearLayout>