<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="gatech.cs6300.project2.FindVipActivity$FindVipFragment" >

    <RelativeLayout
            android:id="@+id/View1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded_corner"
            tools:ignore="UselessParent" >
        
            <EditText
                android:id="@+id/form_vip_id_field"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/form_vip_id_label"
                android:layout_toRightOf="@+id/form_vip_id_label"
                android:ems="10"
                android:inputType="number" >

                <requestFocus />
            </EditText>
        

            <TextView
                android:id="@+id/form_vip_id_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:labelFor="@+id/form_vip_id_field"
                android:text="@string/form_vip_id" />

            <Button
                android:id="@+id/form_find_vip_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/form_vip_id_field"
                android:layout_marginTop="30dp"
                android:layout_centerHorizontal="true"
                android:onClick="findVip"
                android:text="@string/form_find_vip" />
        
        </RelativeLayout>

</RelativeLayout>